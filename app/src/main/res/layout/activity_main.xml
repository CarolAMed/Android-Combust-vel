<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="6"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="12dp"
        android:text="@string/valorGas"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewGasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <SeekBar
        android:id="@+id/seekBarGas"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:max="400"
        android:progress="0"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/textViewEtanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:padding="12dp"
        android:text="@string/valorEtanol"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewEtano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <SeekBar
        android:id="@+id/seekBarEtanol"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:max="400"
        android:progress="0"
        android:layout_gravity="fill_horizontal"/>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/melhorCombustivel"
        android:padding="12dp"
        android:text="O Melhor Combustível é">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputExibi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:cursorVisible="false" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageViewEscolha"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_row="5"
        android:layout_column="0"
        app:srcCompat="@mipmap/ic_launcher" />

</GridLayout>